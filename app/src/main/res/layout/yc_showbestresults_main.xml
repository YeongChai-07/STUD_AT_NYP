<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show best results for the selected test station :" />
    <Spinner
        android:id="@+id/spinBestTestStations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_gravity="center_horizontal"
        android:entries="@array/napfa"/>
        
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show the specified no. of result *"/>
        <!--  >EditText 
            android:id="@+id/limitResultNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number" /-->
    <Spinner
        android:id="@+id/spinLimitNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Choose 0 to show all results for the test station" 
        android:layout_marginBottom="10dp"/>
    
    <LinearLayout 
        android:orientation ="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        
        <Button
            android:id="@+id/limitResultOK" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:layout_marginRight="5dp"/>
        <!--  >EditText 
            android:id="@+id/limitResultNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number" /-->
        <Button
            android:id="@+id/limitResultCancel" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"/>
    </LinearLayout>

    

</LinearLayout>