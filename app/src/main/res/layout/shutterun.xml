<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/bckgrd">
    <RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/relativeLayout2" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_width="match_parent">
            <Button android:text="Done" android:layout_width="140dp" android:id="@+id/button1" android:layout_height="50dp"></Button>
            <Button android:layout_alignParentRight="true" android:text="Cancel" android:id="@+id/button2" android:layout_width="140dp" android:layout_height="50dp"></Button>
        </RelativeLayout>
        <LinearLayout android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="match_parent">
            <TextView android:id="@+id/textView1" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:text="Shutter Run" android:layout_gravity="center"></TextView>
            <TextView android:id="@+id/textView3" android:layout_height="100dp" android:layout_gravity="center" android:layout_width="130dp" android:background="@drawable/sprint"></TextView>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearLayout3" android:layout_height="wrap_content" android:orientation="vertical" android:layout_centerVertical="true" android:layout_width="match_parent">
            <LinearLayout android:id="@+id/linearLayout1" android:weightSum="1" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:layout_marginBottom="7dp">
                <extras.Chronometer android:id="@+id/shuttleRunChronometer" android:layout_weight="0.2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="00.0"></extras.Chronometer>
                
                <TextView android:layout_width="wrap_content" android:text="Sec" android:layout_weight="0.2" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/textView2" android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearLayout4" android:weightSum="1" android:layout_height="wrap_content" android:layout_width="match_parent">
                <Button android:id="@+id/button3" android:layout_width="wrap_content" android:layout_weight="0.5" android:text="Start timer" android:layout_height="wrap_content"></Button>
            </LinearLayout>
            <TextView android:textColor="@android:color/black" android:text="Instructions :" android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
            <TextView android:textColor="@android:color/black" android:text="1.Press start button to the start the timer" android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
            <TextView android:textColor="@android:color/black" android:text="2.Press stop button to stop the timer" android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        
        
        
        
    </RelativeLayout>
    
</LinearLayout>
