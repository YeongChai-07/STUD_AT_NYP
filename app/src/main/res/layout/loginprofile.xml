<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical"
  android:background="@drawable/bckgrd">
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout1">
        <TextView android:id="@+id/textView2" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Profile Page of "></TextView>
        <TextView android:id="@+id/textView1" android:textSize="20sp" android:text="TextView" android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
    </LinearLayout>
    <RelativeLayout android:id="@+id/relativeLayout2" android:layout_width="match_parent" android:gravity="center_horizontal" android:layout_height="wrap_content">
        <TextView android:textSize="20sp" android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Height" android:layout_alignParentLeft="true"></TextView>
        <EditText android:layout_height="wrap_content" android:id="@+id/height" android:inputType="number" android:layout_below="@+id/textView3" android:layout_alignLeft="@+id/textView3" android:layout_width="60dip"></EditText>
        <TextView android:id="@+id/textView4" android:text="Weight" android:textSize="20sp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/height" android:layout_alignLeft="@+id/height"></TextView>
        <EditText android:inputType="number" android:id="@+id/weight" android:layout_height="wrap_content" android:layout_below="@+id/textView4" android:layout_alignLeft="@+id/textView4" android:layout_width="60dip">
            <requestFocus></requestFocus>
        </EditText>
        <LinearLayout android:id="@+id/linearLayout4" android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="wrap_content" android:layout_alignParentTop="true"></LinearLayout>
    </RelativeLayout>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout3">
        <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="SUBMIT" android:id="@+id/submit"></Button>
        <TextView android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_width="wrap_content" android:text="Your BMI is " android:textSize="20sp"></TextView>
        <TextView android:layout_height="wrap_content" android:id="@+id/result" android:layout_width="wrap_content" android:text="BMI" android:textSize="20sp"></TextView>
    </LinearLayout>
    <TextView android:text="Suggestion" android:id="@+id/suggest" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <ImageView android:src="@drawable/fit" android:id="@+id/imageView1" android:layout_width="141dp" android:layout_height="104dp" android:visibility="invisible"></ImageView></LinearLayout>
