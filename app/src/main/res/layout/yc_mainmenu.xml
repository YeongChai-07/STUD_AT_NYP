<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent" 
   android:layout_height="match_parent"
   android:orientation="vertical"
   android:weightSum="1"
   android:background="@drawable/bckgrd">
   
    <TextView
        android:id="@+id/tvNapfaMainInstruct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/howToUseNapfaMain"
        android:textColor="@android:color/black" />
        
        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:orientation="horizontal"
        	android:layout_weight="0.3">
        	
        	<ScrollView
         		android:id="@+id/takeNapfaScrollView"
         		android:layout_height="match_parent"
         		android:layout_width="match_parent">
         		
         		<TableLayout
         			android:layout_height="match_parent"
         			android:layout_width="match_parent">
         			
         			<TableRow
         				android:layout_width="match_parent"
         				android:layout_height="wrap_content"
         				 android:layout_marginBottom = "2dp">
         				
         				<ImageView
	        				android:id="@+id/ivSitUp"
					        android:layout_width="75dp"
					        android:layout_height="120dp"
					        android:layout_marginLeft="2dp"
					        android:layout_marginTop="7dp"
					        android:layout_marginRight="3dp"
					        android:src="@drawable/situp" />
					        
					    <ImageView
					        android:id="@+id/ivSbj"
					        android:layout_height="90dp"
					        android:layout_width="160dp"
					        android:layout_marginTop="20dp"
					        android:layout_marginLeft="10dp"
					        android:src="@drawable/sbj" />
					        
         			</TableRow>
         			
         			<TableRow
         				android:layout_width="match_parent"
         				android:layout_height="wrap_content"
         				android:layout_marginBottom = "10dp">
					    <ImageView
					        android:id="@+id/ivSnR"
					        android:layout_height="100dp"
					        android:layout_width="140dp"
					        android:layout_marginLeft="2dp"
					        android:layout_marginRight="5dp"
					        android:src="@drawable/sitnreach" />
					    <ImageView
					        android:id="@+id/ivPullUp"
					        android:layout_height="89dp"
					        android:layout_width="85dp"
					        android:layout_marginTop="7dp"
					        android:src="@drawable/pullup" /> 
         			    
         			</TableRow>
         			
         			<TableRow 
         			    android:layout_width="match_parent"
         			    android:layout_height="wrap_content">
         			    
         			    <ImageView
					        android:id="@+id/ivSR"
					        android:layout_height="100dp"
					        android:layout_width="150dp"
					        android:layout_marginTop="7dp"
					        android:layout_marginLeft="2dp"
					        android:layout_marginRight="5dp"
					        android:src="@drawable/shuttlerun" />
         			    
         			    <ImageView
					        android:id="@+id/iv2pt4"
					        android:layout_height="100dp"
					        android:layout_width="8dp"
					        android:layout_marginTop="7dp"
					        android:src="@drawable/kmrun" /> 
         			    
         			</TableRow>
         		</TableLayout>
         	</ScrollView>
        		
        </LinearLayout>
        	
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="horizontal">l
        
	    <Button
	        android:id="@+id/takeNapfaSubmitResult"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="Submit result"/>
	    
	</RelativeLayout>
    
    
</LinearLayout>