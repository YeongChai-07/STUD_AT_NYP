<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/bckgrd">
    <RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/relativeLayout2" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_width="match_parent">

            <Button
                android:id="@+id/suDone"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:text="Done" >
</Button>

            <Button
                android:id="@+id/suCancel"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:text="Clear" />

        </RelativeLayout>
        <LinearLayout android:id="@+id/linearLayout3" android:layout_height="wrap_content" android:orientation="vertical" android:layout_centerVertical="true" android:layout_width="match_parent">
           <TextView 
                android:id="@+id/tvSURemainTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/suCountDownBtn"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="Start Timer"	/> 

            <LinearLayout android:id="@+id/linearLayout1" android:weightSum="1" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_gravity="center">

                <EditText
                    android:id="@+id/suET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:inputType="number"
                    android:maxLength="2"/>
				
                <LinearLayout android:orientation="vertical" android:id="@+id/linearLayout4" android:weightSum="1" android:layout_width="43dp" android:layout_height="wrap_content">
                    <Button android:layout_width="40dp" android:text="+" android:id="@+id/sitUpPlus" android:layout_height="40dp" ></Button>
                    <Button android:layout_width="40dp" android:text="-" android:id="@+id/sitUpMinus" android:layout_height="40dp" ></Button>
                </LinearLayout>
                
                
                <TextView android:id="@+id/textView2" android:layout_height="fill_parent" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_weight="0.2" android:text="times" android:gravity="center_vertical" android:layout_width="wrap_content"/>
            </LinearLayout>
            <TextView android:textColor="@android:color/black" android:text="Instructions :" android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
            <TextView android:textColor="@android:color/black" android:text="1. Start the timer, stop when you hear the alarm ringing" android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textColor="@android:color/black" android:text="2. Enter the number of reps you completed and press done when complete" android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		 </LinearLayout>
        <LinearLayout android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:layout_alignParentTop="true" android:layout_alignParentLeft="true">
            <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Situp" android:id="@+id/textView1" android:layout_gravity="center"/>
            <TextView android:layout_width="130dp" android:layout_height="100dp" android:id="@+id/textView3" android:layout_gravity="center" android:background="@drawable/situp"/>
        </LinearLayout>
        
        
        
        
    </RelativeLayout>
    
</LinearLayout>
